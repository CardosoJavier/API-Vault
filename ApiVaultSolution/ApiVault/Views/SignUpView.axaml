<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:ApiVault.ViewModels;assembly=ApiVault"
			 xmlns:local="clr-namespace:ApiVault.Converters;assembly=ApiVault"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="900"
             x:Class="ApiVault.Views.SignUpView"
			 x:DataType="vm:SignUpViewModel"
			 >
	
	<UserControl.Resources>
		<local:MessageToColor x:Key="MessageToColor"/>
	</UserControl.Resources>


	<!--Parent Stack-->
	<Panel Background="{StaticResource WindowBg}">
		<Border
			Background="#272A31"
					Height="605"
					Width="400"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					CornerRadius="30"
					BorderBrush="#7B62FD"
					BorderThickness="2">
			<StackPanel VerticalAlignment="Top">
				<!-- Logo -->
				<Image
					Width="300"
					Source="avares://ApiVault/Assets/Logos/welcomeLogo.png"
					HorizontalAlignment="Center"
					VerticalAlignment="Top"
					Margin="0,30,0,40"/>

				<!-- Input fields -->
				<TextBox
					Name="Email"
					Width="300"
					Height="40"
					Watermark="Email"
					FontSize="18"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Left"
					Background="White"
					SelectionBrush="#7B62FD"
					CaretBrush="Black"
					Foreground="Black"
					Text="{Binding Email}"
					/>

				<TextBox
					Name="Username"
					Width="300"
					Height="40"
					Watermark="Username"
					FontSize="18"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Left"
					Margin="10,10,10,0"
					Background="White"
					SelectionBrush="#7B62FD"
					CaretBrush="Black"
					Foreground="Black"
					Text="{Binding Username}"
					/>

				<TextBox
					Name="Phone"
					Width="300"
					Height="40"
					Watermark="Phone"
					FontSize="18"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Left"
					Margin="10,10,10,0"
					Background="White"
					SelectionBrush="#7B62FD"
					CaretBrush="Black"
					Foreground="Black"
					Text="{Binding Phone}"
					/>

				<TextBox
					Name="Password"
					Width="300"
					Height="40"
					Watermark="Password"
					FontSize="18"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Left"
					PasswordChar="*"
					Margin="10,10,10,0"
					Background="White"
					SelectionBrush="#7B62FD"
					CaretBrush="Black"
					Foreground="Black"
					Text="{Binding Password}"
					/>

				<TextBox
					Name="ConfirmPassword"
					Width="300"
					Height="40"
					Watermark="Confirm Password"
					FontSize="18"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Left"
					PasswordChar="*"
					Margin="10,10,10,0"
					Background="White"
					SelectionBrush="#7B62FD"
					CaretBrush="Black"
					Foreground="Black"
					Text="{Binding ConfirmPassword}"
					/>

				<!-- Sign up Btn -->
				<Button
					Background="#7B62FD"
					Foreground="White"
					Width="200"
					Height="30"
					CornerRadius="5"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					Margin="10"
					Command="{Binding SignUpCommand}"
					>
					Create Account
				</Button>

				<TextBlock
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Text="{Binding StatusMessage}"
					Foreground="{Binding StatusMessage, Converter={StaticResource MessageToColor}}"
					Margin="0 12 0 0"
					FontSize="13"
				/>

				<!-- Sign in btn -->
				<StackPanel
					Orientation="Horizontal"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Margin="0,40,0,0">
					
					<TextBlock
						Text="Have an account already?"
						TextAlignment="Center"
						Foreground="White"
						Margin="10"
						/>
					
					<Button
						Background="#7B62FD"
						Foreground="White"
						CornerRadius="5"
						Click="NavToSignIn"
						>Sign in</Button>
				</StackPanel>
			</StackPanel>
		</Border>
	</Panel>
</UserControl>
