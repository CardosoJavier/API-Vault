<maui:MauiWinUIApplication
    x:Class="ApiVault.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:ApiVault.WinUI">

    <Application.Resources>

        <DataTemplate x:Key="MauiAppTitleBarTemplate">
            <!-- Settings for window title bar -->
            <Grid Background="#7B62FD"  Canvas.ZIndex="1" Height="32">
                <!-- Grid for logo and title -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <Image Margin="3" Source="logo.png"/>
            </Grid>
        </DataTemplate>

    </Application.Resources>
</maui:MauiWinUIApplication>