<maui:MauiWinUIApplication
    x:Class="ApiVault.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:ApiVault.WinUI">

    <Application.Resources>

        <DataTemplate x:Key="MauiAppTitleBarTemplate">
            <!-- Settings for window title bar -->
            <Grid Background="#7B62FD" Canvas.ZIndex="1" Height="32" VerticalAlignment="Stretch">
                <!-- Grid for logo and title -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!-- Logo image -->
                <Image Margin="2" Source="#"/>
                <!-- Title bar text -->
                <TextBlock Grid.Column="1" Text="API Vault" Foreground="White" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" Margin="5,0,0,2"/>
            </Grid>
        </DataTemplate>

    </Application.Resources>
</maui:MauiWinUIApplication>